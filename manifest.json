{
    "name": "Twitter Extension",
    "description": "Filter Tweets by Category",
    "version": "1.0",
    "manifest_version": 3,

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [{
        "matches": ["https://*.twitter.com/*"],
        "js": ["content.js"]

    }],

    "web_accessible_resources": [{
        "resources": ["script.js", "popup.js"],
        "matches": ["https://*.twitter.com/*"]
    }],

    "permissions": [
        "tabs",
        "storage",
        "contextMenus",
        "notifications",
        "bookmarks",
        "history",
        "webRequest"
    ],

    "host_permissions": [
        "https://twitter.com/home",
        "https://google.com/*"

    ],

    "action": {
        "default_popup": "popup.html"
    },



    "icons": {
        "16": "twitter.png",
        "48": "twitter.png",
        "128": "twitter.png"
    }


}